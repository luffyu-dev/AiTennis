/* pages/matchInfo/matchInfo.wxss */

.mathc-info-show{

  width: 100%;
  height: 160px;
  background-color: khaki;
}


.match{
  width: 96%;
  margin-left: 2%;
  padding-bottom: 10px;
  border-radius: 10rpx;
  border-top-left-radius: initial;
  box-shadow: 2px 2px 5px 1px #cdcfcf;
  background-color: #ffffff;
}
.match-info{
  margin-bottom: 10px;
}
.match-lable-row{
  height: 10px;
}
.match-label{
  margin-left: 2%;
  width: 60px;
  background-color: rgba(26, 173, 25, 0.7);
  color: #ffffff;
  font-size: 13px;
  text-align: center;
  height: 25px;
  line-height: 25px;
  margin-top: 15px;
  border-radius: 10rpx;
  border-bottom-left-radius: initial;
  border-bottom-right-radius: initial;
  box-shadow: 2px 2px 5px 1px #cdcfcf;
}

.match-info-vs {
  width: 12%;
  margin-left: 1%;
  height: 34px;
  line-height: 34px;
  text-align: center;
  font-size: 13px;
}

.match-info-user-left {
  width: 29%;
  margin-left: 1%;
  height: 34px;
  line-height: 34px;
  text-align: right;
  font-size: 13px;
}
.match-info-user-right {
  width: 29%;
  margin-left: 1%;
  height: 34px;
  line-height: 34px;
  text-align: left;
  font-size: 13px;
}

.match-info-lable {
  width: 100%;
  font-size: 10px;
  color: rgb(177, 174, 174);
  text-align: center;
}
.user-avatar{
  overflow: hidden;
  width: 30px;
  height: 30px;
  border-radius: 50%;
  margin-top: 2px;
}
