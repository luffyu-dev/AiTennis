/* pages/map/courtShow/courtShow.wxss */

.show-box-card{
  width: 100%;
  margin: 0 auto; 
  min-height: 300rpx;
  z-index:200;  
  position: absolute;
}



.show-court-info-box{
  width: 100%; 
  min-height: 300rpx;
  margin-top: -13rpx;
  border-radius:10rpx 10rpx 0 0; 
  position:absolute;
  z-index:300;
}

.swiper-container{
  width: 100%;
  height: 360rpx;
}

.swiper-image{
  width: 100%;
}

.court-title{
  width: 78%;
  margin-left: 10rpx;
  font-size: 45rpx;
}

.court-lbs{
  width: 20%;
  font-size: 23rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: right;
  color: #9a9e9c;
}

.court-location-row{
    margin-top: 0rpx;
}

.court-location{
  width: 78%;
  padding: 10rpx 10rpx;
  color: #4c4c4c;  
  line-height: 50rpx;
}

.court-location-operator{
  width: 20%;
  color: #005335;  
  font-size: 20rpx;
  text-align: right;
  font-weight: bold;
}

.court-location-operator .van-icon{
  font-size: 40rpx;
  width: 80rpx;
  text-align: center;
}

.court-location-operator text{
  width: 80rpx;
}




